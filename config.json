{
  "name": "HTML to PDF",
  "desc": "Action convert HTML to PDF.",
  "version": {
    "major": 1,
    "minor": 0
  },
  "actions": [
    {
      "name": "HTML to PDF",
      "desc": "This action converts a webpage (via URL) or an HTML file into a well-formatted PDF document. Users can input a URL or an HTML file, and the action will capture the content, including text, images, and layout, transforming it into a PDF.",
      "category": "Conversion",
      "stdout": "",
      "stderr": "",
      "returnCodes": [
        0
      ],
      "configurations": [
        {
          "name": "URL address to PDF",
          "desc": "Convert URL into a well-formatted PDF document.",
          "program": "docker run --platform linux/amd64 -v ${WORKING_DIRECTORY}:/data -w /data --rm pdfix/html-to-pdf:latest html-to-pdf -i ${URL} -o $(basename ${OUTPUT_PDF})",
          "args": [
            "--name", 
            "${LICENSE_NAME}", 
            "--key",
            "${LICENSE_KEY}"
          ]
        },
        {
          "name": "HTML file to PDF.",
          "desc": "Convert HTML file into a well-formatted PDF document.",
          "program": "docker run --platform linux/amd64 -v ${WORKING_DIRECTORY}:/data -w /data --rm pdfix/html-to-pdf:latest html-to-pdf -i $(basename ${INPUT_HTML}) -o $(basename ${OUTPUT_PDF})",
          "args": [
            "--name", 
            "${LICENSE_NAME}", 
            "--key",
            "${LICENSE_KEY}"
          ]
        }
      ],
      "args": [
        {
          "name": "URL",
          "desc": "URL address.",
          "flags": 2,
          "type": "url",
          "value": ""
        },
        {
          "name": "INPUT_HTML",
          "desc": "HTML file.",
          "flags": 2,
          "type": "file_path",
          "ext": "html",
          "value": ""
        },
        {
          "name": "OUTPUT_PDF",
          "desc": "Output PDF file.",
          "flags": 4,
          "type": "file_path",
          "ext": "pdf",
          "value": ""
        }
      ]
    }
  ]
}