{
    "name": "Convert to PDF",
    "version": "v0.0.0",
    "actions": [
        {
            "title": "Convert HTML to PDF",
            "name": "pdfix_convert_html_to_pdf_chrome",
            "desc": "Converts HTML to PDF [Local]",
            "version": "v0.0.0",
            "icon": "html_to_pdf",
            "category": "Conversion",
            "local": "True",
            "program": "docker run --platform linux/amd64 -v ${working_directory}:/data -w /data --rm pdfix/convert-html-to-pdf:latest html-to-pdf -i \"/data/${input_html}\" -o \"/data/${output_pdf}\"",
            "args": [
                {
                    "name": "input_html",
                    "desc": "Input HTML file",
                    "flags": 2,
                    "type": "file_path",
                    "ext": "html",
                    "value": ""
                },
                {
                    "name": "output_pdf",
                    "desc": "Output PDF file",
                    "flags": 4,
                    "type": "file_path",
                    "ext": "pdf",
                    "value": ""
                }
            ],
            "errors": {
                "10": "Failed to parse arguments. Please check the usage and try again.",
                "30": "Failed to find input file or download webpage from URL.",
                "31": "Failed to convert HTML to PDF."
            }
        },
        {
            "title": "Convert URL to PDF",
            "name": "pdfix_convert_url_to_pdf_chrome",
            "desc": "Converts URL to PDF [Local]",
            "version": "v0.0.0",
            "icon": "url_to_pdf",
            "category": "Conversion",
            "local": "True",
            "program": "docker run --platform linux/amd64 -v ${working_directory}:/data -w /data --rm pdfix/convert-html-to-pdf:latest html-to-pdf -i \"${url}\" -o \"/data/${output_pdf}\"",
            "args": [
                {
                    "name": "url",
                    "desc": "Input URL address",
                    "flags": 2,
                    "type": "url",
                    "value": ""
                },
                {
                    "name": "output_pdf",
                    "desc": "Output PDF file",
                    "flags": 4,
                    "type": "file_path",
                    "ext": "pdf",
                    "value": ""
                }
            ],
            "errors": {
                "10": "Failed to parse arguments. Please check the usage and try again.",
                "30": "Failed to find input file or download webpage from URL.",
                "31": "Failed to convert HTML to PDF."
            }
        }
    ]
}
