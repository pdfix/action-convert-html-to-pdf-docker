{
  "actions": [
    {
      "name": "HTML to PDF",
      "desc": "Convert HTML to PDF",
      "version": {
        "major": 1,
        "minor": 0
      },
      "icon": "html",
      "category": "Conversion",
      "configurations": [
        {
          "name": "URL to PDF",
          "desc": "Convert URL into a well-formatted PDF document",
          "program": "docker run --platform linux/amd64 -v ${working_directory}:/data -w /data --rm pdfix/html-to-pdf:latest --name \"${license_name}\" --key \"${license_key}\" html-to-pdf --url \"${url}\" -o \"/data/${output_pdf}\""
        },
        {
          "name": "HTML file to PDF",
          "desc": "Convert HTML file into a well-formatted PDF document",
          "program": "docker run --platform linux/amd64 -v ${working_directory}:/data -w /data --rm pdfix/html-to-pdf:latest --name \"${license_name}\" --key \"${license_key}\" html-to-pdf -i \"/data/${input_html}\" -o \"/data/${output_pdf}\""
        }
      ],
      "args": [
        {
          "name": "url",
          "desc": "URL address",
          "flags": 2,
          "type": "url",
          "value": ""
        },
        {
          "name": "input_html",
          "desc": "HTML file",
          "flags": 2,
          "type": "file_path",
          "ext": "html",
          "value": ""
        },
        {
          "name": "output_pdf",
          "desc": "Output PDF file",
          "flags": 4,
          "type": "file_path",
          "ext": "pdf",
          "value": ""
        }
      ]
    }
  ]
}